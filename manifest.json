{

    "manifest_version": 2,
    "name": "GameName",
    "version": "1.0",
  
    "description": "Brief description of the game for helping out the users.",
    "homepage_url": "https://sites.google.com/site/vkgamedev",
    "icons": {
      "48": "icons/icon-48.png"
    },
    "content_security_policy" : "script-src 'self' blob:; object-src 'self' blob:",
    "permissions": [
      "activeTab"
    ],
    "background": {
        "scripts": ["popup.js"]
      },
      "browser_action":{
        "default_icon": "icons/icon-32.png",
        "default_title": "GameName"
      }
  }